<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="Order Coffee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/orderCoffee"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" app:layout_constraintHorizontal_bias="0.074"
            android:layout_marginBottom="372dp"/>
    <Button
            android:text="Order Donuts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/orderDonuts"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" app:layout_constraintHorizontal_bias="0.923"
            android:layout_marginBottom="372dp"/>
    <Button
            android:text="Your Order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/yourOrder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" app:layout_constraintHorizontal_bias="0.069"
            android:layout_marginBottom="152dp"/>
    <Button
            android:text="Store Order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/storeOrder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" app:layout_constraintHorizontal_bias="0.878"
            android:layout_marginBottom="152dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>